<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="right"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/btnAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/plus"
                android:layout_marginTop="10dp"
                android:text="Add" />

            <TextView
                android:id="@+id/titleUnfinished"
                android:layout_below="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unfinished Tasks"
                android:textColor="@color/darkblue"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/finishBtn"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:background="@drawable/rounded_button_dark"
                android:text="Finish Task"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorInputText"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/titleText"
                android:layout_above="@id/recyclerViewTodolist"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTodolist"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/titleUnfinished"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="12dp" />

            <TextView
                android:id="@+id/titleFinished"
                android:layout_below="@+id/recyclerViewTodolist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finished Tasks"
                android:textColor="@color/darkblue"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/unfinishButton"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:background="@drawable/rounded_button_dark"
                android:text="Unfinish Task"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorInputText"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/recyclerViewTodolist"
                android:layout_above="@id/TodolistFinished"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/TodolistFinished"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/titleFinished"
                android:layout_marginTop="2dp"
                android:paddingTop="12dp" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/darkblue"
                android:textSize="28sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>